<%= simple_form_for Idea.new do |f| %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
<% end %>


<% @ideas.each do |idea| %>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <blockquote>
        <p><%= idea.description %></p>
        <small><%= idea.author %></small>  
      </blockquote>
    </div>
  </div>
</div>
<% end %>
